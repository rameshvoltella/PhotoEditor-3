<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_flip_margin"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fragment_property_list_button_flip_hor"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="@dimen/button_flip_size"
                android:layout_height="@dimen/button_flip_size"
                android:src="@drawable/ic_flip"
                android:tint="@color/white"/>

            <ImageButton
                android:id="@+id/fragment_property_list_button_flip_vert"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="@dimen/button_flip_size"
                android:layout_height="@dimen/button_flip_size"
                android:src="@drawable/ic_flip_vert"
                android:tint="@color/white"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/property_list_recycleview_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>