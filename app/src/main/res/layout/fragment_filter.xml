<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginBottom="@dimen/activity_vertical_margin"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/item_view_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/fragment_filter_button_documentary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/documentary"
                    android:textSize="@dimen/button_text_size"/>

                <CheckBox
                    android:id="@+id/fragment_filter_button_posterize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/posterize"
                    android:textSize="@dimen/button_text_size"/>

                <CheckBox
                    android:id="@+id/fragment_filter_button_sepia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sepia"
                    android:textSize="@dimen/button_text_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/fragment_filter_button_lomoish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lomoish"
                    android:textSize="@dimen/button_text_size"/>

                <CheckBox
                    android:id="@+id/fragment_filter_button_negative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/negative"
                    android:textSize="@dimen/button_text_size"/>

                <CheckBox
                    android:id="@+id/fragment_filter_button_grayscale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/grayscale"
                    android:textSize="@dimen/button_text_size"/>

            </LinearLayout>

            <Button
                android:id="@+id/fragment_filter_button_save"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/friend_item_margin"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="@string/save_filter"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_filter_recycler_view_filters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/fragment_filter_text_view_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/empty"
            android:textSize="@dimen/text_progress"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/fragment_filter_progress_bar_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/fragment_filter_edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:hint="@string/enter_name"/>

    </FrameLayout>

</FrameLayout>
