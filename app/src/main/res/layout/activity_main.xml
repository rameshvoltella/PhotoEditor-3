<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/activity_main_text_view_publication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/publication"
            android:visibility="gone"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/activity_main_linear_layout_interface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_padding">

        <ImageView
            android:id="@+id/activity_main_image_view_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pinguin"/>

        <Button
            android:id="@+id/activity_main_button_Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_photo"/>

        <CheckBox
            android:id="@+id/activity_main_checkbox_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_friends"/>

    </LinearLayout>


</FrameLayout>
